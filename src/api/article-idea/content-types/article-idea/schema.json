{
  "kind": "collectionType",
  "collectionName": "article_ideas",
  "info": {
    "singularName": "article-idea",
    "pluralName": "article-ideas",
    "displayName": "Article Idea",
    "description": "Ideas for future articles generated by AI or added manually"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "maxLength": 300
    },
    "categorySlug": {
      "type": "enumeration",
      "enum": ["guides", "news", "reviews", "lists"],
      "required": true
    },
    "instruction": {
      "type": "text",
      "maxLength": 500
    },
    "done": {
      "type": "boolean",
      "default": false
    },
    "sourcePost": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::post.post"
    },
    "game": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::game.game",
      "required": true
    }
  }
}

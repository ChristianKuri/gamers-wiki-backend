{
  "kind": "collectionType",
  "collectionName": "game_modes",
  "info": {
    "singularName": "game-mode",
    "pluralName": "game-modes",
    "displayName": "Game Mode",
    "description": "Game modes (e.g., Single player, Multiplayer, Co-op)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "igdbId": {
      "type": "integer",
      "unique": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "games": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::game.game",
      "mappedBy": "gameModes"
    }
  }
}


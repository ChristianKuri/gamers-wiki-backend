{
  "kind": "collectionType",
  "collectionName": "keywords",
  "info": {
    "singularName": "keyword",
    "pluralName": "keywords",
    "displayName": "Keyword",
    "description": "Game keywords for SEO and tagging (e.g., Open World, Roguelike, Multiplayer)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "igdbId": {
      "type": "integer",
      "unique": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "games": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::game.game",
      "mappedBy": "keywords"
    }
  }
}


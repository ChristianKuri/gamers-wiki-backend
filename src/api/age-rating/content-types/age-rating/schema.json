{
  "kind": "collectionType",
  "collectionName": "age_ratings",
  "info": {
    "singularName": "age-rating",
    "pluralName": "age-ratings",
    "displayName": "Age Rating",
    "description": "Age ratings from PEGI, ESRB, and other rating organizations"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "category": {
      "type": "enumeration",
      "enum": ["ESRB", "PEGI", "CERO", "USK", "GRAC", "CLASS_IND", "ACB"],
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "rating": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "ratingCoverUrl": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "synopsis": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "igdbId": {
      "type": "integer",
      "unique": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "contentDescriptions": {
      "type": "json",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "games": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::game.game",
      "mappedBy": "ageRatings"
    }
  }
}

